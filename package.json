{
  "name": "express-typescript-starter-kit",
  "version": "1.0.0",
  "description": "Express Typescript Starter Kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/thanhliem98/express-typescript-starter-kit"
  },
  "author": "Ly Thanh Liem",
  "license": "MIT",
  "_moduleAliases": {
    "@app": "dist/"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "copy": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.16.2",
    "express-validator": "^6.0.1",
    "hbs": "^4.0.4",
    "lodash": "^4.17.13",
    "lusca": "^1.6.1",
    "module-alias": "^2.2.1",
    "mongoose": "^5.6.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "slug": "^1.1.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/date-fns": "^2.6.0",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.0",
    "@types/express-flash": "0.0.0",
    "@types/express-session": "^1.15.13",
    "@types/hbs": "^4.0.1",
    "@types/jquery": "^3.3.30",
    "@types/lodash": "^4.14.134",
    "@types/lusca": "^1.6.0",
    "@types/mongoose": "^5.5.11",
    "@types/node": "^12.0.10",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.5",
    "@types/slug": "^0.9.1",
    "@types/winston": "^2.3.9",
    "concurrently": "^4.1.0",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
